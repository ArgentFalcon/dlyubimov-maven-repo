  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.inadco.hbl</groupId>
    <artifactId>hbl-parent</artifactId>
    <version>0.1.19-SNAPSHOT</version>
  </parent>

  <name>HBase-Lattice :: hbl-R</name>
  <artifactId>hblr</artifactId>

  <packaging>jar</packaging>

  <profiles>

    <profile>
      <id>R</id>

      <build>

        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>generate-sources</id>
                <phase>compile</phase>
                <configuration>
                  <tasks>
                    <exec executable="${basedir}/build/buildR.sh"
                      failonerror="true" dir="${basedir}/build">
                      <!-- R pkg name -->
                      <arg value="hblR" />
                      <!-- maven version -->
                      <arg value="${project.version}" />
                    </exec>
                  </tasks>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>

          <plugin>
            <artifactId>build-helper-maven-plugin</artifactId>
            <groupId>org.codehaus.mojo</groupId>
            <version>1.7</version>
            <executions>
              <execution>
                <id>r-attach</id>
                <phase>package</phase>
                <goals>
                  <goal>attach-artifact</goal>
                </goals>
                <configuration>
                  <artifacts>
                    <artifact>
                      <file>${basedir}/target/hblR-${project.version}-rpkg.tar.gz</file>
                      <type>tar.gz</type>
                      <classifier>rpkg</classifier>
                    </artifact>
                  </artifacts>
                </configuration>
              </execution>
            </executions>

          </plugin>
        </plugins>

      </build>

    </profile>
  </profiles>

  <build>

    <plugins>

      <plugin>
        <artifactId>maven-source-plugin</artifactId>
      </plugin>

      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
      </plugin>

      <plugin>
        <groupId>org.antlr</groupId>
        <artifactId>antlr3-maven-plugin</artifactId>
      </plugin>


    </plugins>
  </build>

  <dependencies>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>hbl</artifactId>
    </dependency>


    <!-- test -->
    <dependency>
      <groupId>org.testng</groupId>
      <artifactId>testng</artifactId>
      <classifier>jdk15</classifier>
      <scope>test</scope>
    </dependency>


  </dependencies>
</project>
